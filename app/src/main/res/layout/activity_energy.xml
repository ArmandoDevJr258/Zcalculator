<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".quickies.Energy">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <ImageButton
            android:id="@+id/btnReturn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"

            />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintStart_toStartOf="parent"

        />
    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/input"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:paddingRight="50dp"
        android:textDirection="rtl"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="numberDecimal"
        android:focusable="false"
        />
    <TextView
        android:id="@+id/unitTxt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="j"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/input1"
        app:layout_constraintTop_toTopOf="@id/input1"
        app:layout_constraintBottom_toBottomOf="@id/input1"
        android:layout_marginRight="20dp"
        />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/input"
        android:paddingRight="50dp"
        android:textDirection="rtl"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:inputType="numberDecimal"
        android:focusable="false"
        />
    <TextView
        android:id="@+id/unitTxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="g"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/input2"
        app:layout_constraintTop_toTopOf="@id/input2"
        app:layout_constraintBottom_toBottomOf="@id/input2"
        android:layout_marginRight="20dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keypadLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/input2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp">

        <!-- Row 1: C, ., +/-, clear -->
        <Button
            android:id="@+id/btnc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="C"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btndot"/>

        <Button
            android:id="@+id/btndot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn8"
            app:layout_constraintStart_toEndOf="@id/btnc"
            app:layout_constraintEnd_toStartOf="@+id/btnplusminus"/>

        <Button
            android:id="@+id/btnplusminus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="+/-"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn7"
            app:layout_constraintStart_toEndOf="@id/btndot"
            app:layout_constraintEnd_toStartOf="@+id/btnclear"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnclear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:background="@drawable/buttonshape2"
            app:icon="@drawable/clear"
            android:layout_margin="5dp"
            app:iconSize="40dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnup"
            app:layout_constraintStart_toEndOf="@id/btnplusminus"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Row 2: 9,8,7,up arrow -->
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btnc"
            app:layout_constraintBottom_toTopOf="@+id/btn6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn8"/>

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btndot"
            app:layout_constraintBottom_toTopOf="@+id/btn5"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintEnd_toStartOf="@+id/btn7"/>

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btnplusminus"
            app:layout_constraintBottom_toTopOf="@+id/btn4"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintEnd_toStartOf="@+id/btnup"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:icon="@drawable/up"
            app:iconPadding="8dp"
            app:cornerRadius="20dp"
            app:iconSize="30dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ffb221"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnclear"
            app:layout_constraintBottom_toTopOf="@+id/btndown"/>

        <!-- Row 3: 6,5,4,down arrow -->
        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintBottom_toTopOf="@+id/btn3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn5"/>

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintBottom_toTopOf="@+id/btn2"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintEnd_toStartOf="@+id/btn4"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintBottom_toTopOf="@+id/btn1"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintEnd_toStartOf="@+id/btndown"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btndown"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:icon="@drawable/down"
            app:iconPadding="8dp"
            app:cornerRadius="25dp"
            app:iconSize="30dp"
            android:layout_margin="5dp"
            android:backgroundTint="#ffb221"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnup"
            app:layout_constraintBottom_toTopOf="@+id/btn0"/>

        <!-- Row 4: 3,2,1,0 -->
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="25sp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn2"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintEnd_toStartOf="@+id/btn1"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintEnd_toStartOf="@+id/btn0"/>

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape2"
            app:layout_constraintTop_toBottomOf="@id/btndown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>