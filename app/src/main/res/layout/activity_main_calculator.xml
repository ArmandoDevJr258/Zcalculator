<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainCalculator">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnReturn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:id="@+id/txtbasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/txtcientific"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cientific Calculator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:focusable="true"
            android:alpha="0.3"
            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/basicCalculatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"



        >

        <EditText
            android:id="@+id/operationinput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="0"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />
        <EditText
            android:id="@+id/resultinput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/operationinput"
            android:hint="0"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/btnc"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            android:textColor="#ff0000"

            />
        <Button
            android:id="@+id/btnparenteses"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="( )"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toEndOf="@id/btnc"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btnpercent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="%"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toEndOf="@id/btnparenteses"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/btnequals"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="="
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toEndOf="@id/btnpercent"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            android:textColor="#ffd402"
            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnc"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnparenteses"
            app:layout_constraintStart_toEndOf="@id/btn9"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btnpercent"
            app:layout_constraintStart_toEndOf="@id/btn8"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btnplus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btnequals"
            app:layout_constraintStart_toEndOf="@id/btn7"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            android:textColor="#ffd402"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintStart_toEndOf="@id/btn6"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@id/btn5"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btnminus"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnplus"
            app:layout_constraintStart_toEndOf="@id/btn4"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            android:textColor="#ffd402"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintStart_toEndOf="@id/btn3"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@id/btn2"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btntimes"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="X"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btnminus"
            app:layout_constraintStart_toEndOf="@id/btn1"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            android:textColor="#ffd402"
            />

        <Button
            android:id="@+id/btn0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btndot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="."
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@id/btn0"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btnq"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="+/-"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@id/btndot"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btndevide"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="/"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btntimes"
            app:layout_constraintStart_toEndOf="@id/btn1"
            android:background="@drawable/buttonshape"
            android:layout_margin="10dp"
            android:textColor="#ffd402"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cientificCalculatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"





        >
        <EditText
            android:id="@+id/operainput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="number"
            android:hint="0"
            app:layout_constraintTop_toBottomOf="@id/header"
            tools:ignore="NotSibling" />
        <EditText
            android:id="@+id/resulstinput"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/operainput"
            android:inputType="number"
            android:hint="0"
            />
        <Button
            android:id="@+id/cfbtnc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            android:text="C"
            android:textColor="#ff0000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resulstinput" />
        <Button
            android:id="@+id/cfbtnparenteses"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="( )"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnc"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnpercent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="%"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnparenteses"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnwhat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="www"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtn7"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnequals"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnwhat"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffd402"
            />


        <Button
            android:id="@+id/cfbtn9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="9"
            app:layout_constraintTop_toBottomOf="@id/cfbtnc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="8"
            app:layout_constraintTop_toBottomOf="@id/cfbtnparenteses"
            app:layout_constraintStart_toEndOf="@id/cfbtn9"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="7"
            app:layout_constraintTop_toBottomOf="@id/cfbtnpercent"
            app:layout_constraintStart_toEndOf="@id/cfbtn8"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />

        <Button
            android:id="@+id/cfbtnrad"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Rad"
            app:layout_constraintTop_toBottomOf="@id/cfbtnequals"
            app:layout_constraintStart_toEndOf="@id/cfbtn7"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnplus"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            android:text="+"
            android:textColor="#ffd402"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/cfbtnrad"
            app:layout_constraintTop_toBottomOf="@id/cfbtnwhat" />


        <Button
            android:id="@+id/cfbtn6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="6"
            app:layout_constraintTop_toBottomOf="@id/cfbtn9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="5"
            app:layout_constraintTop_toBottomOf="@id/cfbtn8"
            app:layout_constraintStart_toEndOf="@id/cfbtn6"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="4"
            app:layout_constraintTop_toBottomOf="@id/cfbtn7"
            app:layout_constraintStart_toEndOf="@id/cfbtn5"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />

        <Button
            android:id="@+id/cfbtnsin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Sin"
            app:layout_constraintTop_toBottomOf="@id/cfbtnrad"
            app:layout_constraintStart_toEndOf="@id/cfbtn4"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
        android:id="@+id/cfbtnminus"
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:text="-"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/cfbtnplus"
        app:layout_constraintStart_toEndOf="@id/cfbtnsin"
        android:layout_margin="10dp"
        android:background="@drawable/buttonshape"
        android:textColor="#ffd402"
        />


        <Button
            android:id="@+id/cfbtn3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="3"
            app:layout_constraintTop_toBottomOf="@id/cfbtn6"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="2"
            app:layout_constraintTop_toBottomOf="@id/cfbtn5"
            app:layout_constraintStart_toEndOf="@id/cfbtn3"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            app:layout_constraintTop_toBottomOf="@id/cfbtn4"
            app:layout_constraintStart_toEndOf="@id/cfbtn2"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
        android:id="@+id/cfbtncos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Cos"
        app:layout_constraintTop_toBottomOf="@id/cfbtnsin"
        app:layout_constraintStart_toEndOf="@id/cfbtn1"
        android:layout_margin="10dp"
        android:background="@drawable/buttonshape"
        />
        <Button
            android:id="@+id/cfbtntimes"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="X"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/cfbtnminus"
            app:layout_constraintStart_toEndOf="@id/cfbtncos"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffd402"
            />




        <Button
            android:id="@+id/cfbtn0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/cfbtn3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtndot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="."
            app:layout_constraintTop_toBottomOf="@id/cfbtn2"
            app:layout_constraintStart_toEndOf="@id/cfbtn0"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnplusminus"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="+/-"
            app:layout_constraintTop_toBottomOf="@id/cfbtn1"
            app:layout_constraintStart_toEndOf="@id/cfbtndot"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
        android:id="@+id/cfbtntang"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Tan"
        app:layout_constraintTop_toBottomOf="@id/cfbtncos"
        app:layout_constraintStart_toEndOf="@id/cfbtnplusminus"
        android:layout_margin="10dp"
        android:background="@drawable/buttonshape"
        />
        <Button
            android:id="@+id/cfbtndevide"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="/"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/cfbtntimes"
            app:layout_constraintStart_toEndOf="@id/cfbtntang"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            android:textColor="#ffd402"
            />


        <Button
            android:id="@+id/cfbtne"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="e"
            app:layout_constraintTop_toBottomOf="@id/cfbtn0"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnpi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="pi"
            app:layout_constraintTop_toBottomOf="@id/cfbtndot"
            app:layout_constraintStart_toEndOf="@id/cfbtn9"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnmodule"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="module"
            app:layout_constraintTop_toBottomOf="@id/cfbtnplusminus"
            app:layout_constraintStart_toEndOf="@id/cfbtn8"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnlog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="lg"
            app:layout_constraintTop_toBottomOf="@id/cfbtndevide"
            app:layout_constraintStart_toEndOf="@id/cfbtnmodule"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnfatorial"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:text="n!"
            app:layout_constraintTop_toBottomOf="@id/cfbtntang"
            app:layout_constraintStart_toEndOf="@id/cfbtnlog"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />



        <Button
            android:id="@+id/cfbtnroot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="root"
            app:layout_constraintTop_toBottomOf="@id/cfbtne"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnln"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="Ln"
            app:layout_constraintTop_toBottomOf="@id/cfbtnpi"
            app:layout_constraintStart_toEndOf="@id/cfbtnroot"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnexp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="exp"
            app:layout_constraintTop_toBottomOf="@id/cfbtnmodule"
            app:layout_constraintStart_toEndOf="@id/cfbtnln"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>










</androidx.constraintlayout.widget.ConstraintLayout>