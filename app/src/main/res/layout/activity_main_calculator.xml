<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainCalculator">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnReturn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:id="@+id/txtbasic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:focusable="true"
            />
        <TextView
            android:id="@+id/txtcientific"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cientific_calculator"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:focusable="false"

            android:alpha="0.3"
            />
        <ImageButton
            android:id="@+id/btnHistory"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/menu"
            android:backgroundTint="@color/white"


            />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/basicCalculatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"





        >

        <EditText
            android:id="@+id/operationinput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="0"
            android:inputType="number"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="false"
            android:textSize="25sp"
            android:paddingLeft="30dp"
            android:textStyle="bold"


            />
        <EditText
            android:id="@+id/resultinput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:layout_constraintTop_toBottomOf="@id/operationinput"
            android:hint="0"
            android:inputType="number"
            android:textColorHint="#ffd402"
            android:textColor="#ffd402"
            android:focusable="false"
            android:textDirection="rtl"
            android:paddingRight="50dp"
            android:alpha="0.2"

            />
        <TextView
            android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Result:"
            android:textColor="#ffd402"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/resultinput"
            app:layout_constraintTop_toTopOf="@id/resultinput" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConverters"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:icon="@drawable/flash"
            app:iconTint="@color/white"
            app:iconSize="25dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnbb"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ff0000"


            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnbb"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:icon="@drawable/history"
            app:iconTint="@color/white"
            app:iconSize="25dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toEndOf="@id/btnConverters"
            app:layout_constraintEnd_toStartOf="@id/btncc"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ff0000"


            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btncc"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:icon="@drawable/paste"
            app:iconTint="@color/white"
            app:iconSize="25dp"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toEndOf="@id/btnbb"
            app:layout_constraintEnd_toStartOf="@id/btnClear"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ff0000"


            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:icon="@drawable/clear"
            app:iconTint="@color/white"
            app:iconSize="30dp"
            app:iconGravity="textStart"
            android:background="@drawable/buttonshape"
            app:layout_constraintTop_toBottomOf="@id/resultinput"
            app:layout_constraintStart_toEndOf="@id/btncc"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:textColor="#ffd402"




            />
        <Button
            android:id="@+id/btnc"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="C"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnConverters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnparenteses"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ff0000"


            />
        <Button
            android:id="@+id/btnparenteses"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="( )"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btnbb"
            app:layout_constraintStart_toEndOf="@id/btnc"
            app:layout_constraintEnd_toStartOf="@id/btnpercent"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btnpercent"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="%"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btncc"
            app:layout_constraintStart_toEndOf="@id/btnparenteses"
            app:layout_constraintEnd_toStartOf="@id/btnequals"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/btnequals"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="="
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnClear"
            app:layout_constraintStart_toEndOf="@id/btnpercent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ffd402"


            />
        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="9"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btnc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn8"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="8"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btnparenteses"
            app:layout_constraintStart_toEndOf="@id/btn9"
            app:layout_constraintEnd_toStartOf="@id/btn7"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="7"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btnpercent"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintEnd_toStartOf="@id/btnplus"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btnplus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="+"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btnequals"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ffd402"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="6"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="5"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintStart_toEndOf="@id/btn6"
            app:layout_constraintEnd_toStartOf="@id/btn4"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="4"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintEnd_toStartOf="@id/btnminus"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btnminus"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="-"
            android:textSize="50dp"
            app:layout_constraintTop_toBottomOf="@id/btnplus"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ffd402"
            />
        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="3"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn2"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="2"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintStart_toEndOf="@id/btn3"
            app:layout_constraintEnd_toStartOf="@id/btn1"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="1"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintEnd_toStartOf="@id/btntimes"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btntimes"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="X"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btnminus"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ffd402"
            />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="0"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@+id/btndot"
            app:layout_constraintEnd_toStartOf="@id/btndevide"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btndot"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="."
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintStart_toEndOf="@id/btnq"
            app:layout_constraintEnd_toStartOf="@id/btn0"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btnq"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="+/-"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn3"

            app:layout_constraintEnd_toStartOf="@id/btndot"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btndevide"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:text="/"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/btntimes"
            app:layout_constraintStart_toEndOf="@id/btn0"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/buttonshape"
            android:layout_margin="5dp"
            android:textColor="#ffd402"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cientificCalculatorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       android:visibility="gone"







        >
        <EditText
            android:id="@+id/operainput"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="number"
            android:hint="0"
            app:layout_constraintTop_toBottomOf="@id/header"
            android:paddingLeft="50dp"
            android:textSize="50sp"

            tools:ignore="NotSibling" />
        <EditText
            android:id="@+id/resulstinput"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/operainput"
            android:inputType="number"
            android:paddingRight="50dp"
            android:hint="0"
            android:focusable="false"
            android:clickable="false"
            android:textSize="20sp"
            android:textDirection="rtl"
            android:cursorVisible="false"
            />
        <Button
            android:id="@+id/cfbtnc"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            android:text="C"
            android:textColor="#ff0000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cfbtnparenteses"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            />

        <Button
            android:id="@+id/cfbtnparenteses"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="( )"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnc"
            app:layout_constraintEnd_toStartOf="@id/cfbtnpercent"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnpercent"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="%"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnparenteses"
            app:layout_constraintEnd_toStartOf="@id/cfbtnwhat"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnwhat"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="www"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnpercent"
            app:layout_constraintEnd_toStartOf="@id/cfbtnequals"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnequals"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@id/resulstinput"
            app:layout_constraintStart_toEndOf="@id/cfbtnwhat"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#ffd402"
            />


        <Button
            android:id="@+id/cfbtn9"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtnc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cfbtn8"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn8"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtnparenteses"
            app:layout_constraintStart_toEndOf="@id/cfbtn9"
            app:layout_constraintEnd_toStartOf="@id/cfbtn7"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn7"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtnpercent"
            app:layout_constraintStart_toEndOf="@id/cfbtn8"
            app:layout_constraintEnd_toStartOf="@id/cfbtnrad"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />

        <Button
            android:id="@+id/cfbtnrad"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="Rad"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtnequals"
            app:layout_constraintStart_toEndOf="@id/cfbtn7"
            app:layout_constraintEnd_toStartOf="@+id/cfbtnplus"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtnplus"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            android:text="+"

            android:textStyle="bold"
            android:textColor="#ffd402"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@id/cfbtnrad"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cfbtnwhat" />


        <Button
            android:id="@+id/cfbtn6"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtn9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cfbtn5"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtn8"
            app:layout_constraintStart_toEndOf="@id/cfbtn6"
            app:layout_constraintEnd_toStartOf="@+id/cfbtn4"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtn7"
            app:layout_constraintStart_toEndOf="@id/cfbtn5"
            app:layout_constraintEnd_toStartOf="@+id/cfbtnsin"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />

        <Button
            android:id="@+id/cfbtnsin"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="Sin"

            app:layout_constraintTop_toBottomOf="@id/cfbtnrad"
            app:layout_constraintStart_toEndOf="@id/cfbtn4"
            app:layout_constraintEnd_toStartOf="@+id/cfbtnminus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
        android:id="@+id/cfbtnminus"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="-"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/cfbtnplus"
        app:layout_constraintStart_toEndOf="@id/cfbtnsin"
            android:layout_margin="5dp"
        android:background="@drawable/buttonshape"
            app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#ffd402"
        />


        <Button
            android:id="@+id/cfbtn3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtn6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cfbtn2"
            android:layout_margin="5dp"
            android:background="@drawable/buttonshape"
            />
        <Button
            android:id="@+id/cfbtn2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cfbtn5"
            app:layout_constraintStart_toEndOf="@id/cfbtn3"
