<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quickies.Power">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"

            />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"

        app:layout_constraintStart_toStartOf="parent"

        />
    <EditText
        android:id="@+id/input1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/input"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        />
    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/input2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner2"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/input"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/input2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"

        >
        <Button
            android:id="@+id/btnc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="C"
            android:textColor="#ff0000"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/buttonshape2"
            android:layout_margin="10dp"
            />
        <Button
            android:id="@+id/btndot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="."
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/btnc"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <Button
            android:id="@+id/btnplusminus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+/-"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/btndot"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnclear"
            android:layout_width="85dp"
            android:layout_height="100dp"
            android:textStyle="bold"
            android:textSize="25sp"
            app:iconSize="40dp"
            app:iconGravity="textStart"
            app:icon="@drawable/clear"
            app:layout_constraintStart_toEndOf="@id/btnplusminus"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnc"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:layout_constraintTop_toBottomOf="@id/btndot"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintTop_toBottomOf="@id/btnplusminus"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"

            />
        <ImageButton
            android:id="@+id/btnup"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            app:layout_constraintStart_toEndOf="@id/btn7"
            app:layout_constraintTop_toBottomOf="@id/btnclear"
            android:background="@drawable/up"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"

            />


        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"

            />
        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <ImageButton
            android:id="@+id/btndown"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            app:layout_constraintStart_toEndOf="@id/btn4"
            app:layout_constraintTop_toBottomOf="@id/btnup"
            android:background="@drawable/spinnercontainer"
            android:layout_margin="10dp"

            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/btn9"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />
        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            app:layout_constraintStart_toEndOf="@id/btn8"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"
            />

        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@id/btn1"
            app:layout_constraintTop_toBottomOf="@id/btndown"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:background="@drawable/buttonshape2"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>