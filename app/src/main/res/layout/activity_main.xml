<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/header"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:orientation="horizontal"

       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Zcalculator"
           android:textStyle="bold"
           android:textSize="25sp"
           android:textColor="@color/white"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:layout_marginLeft="20dp"
           android:layout_marginTop="10dp"
           />


       <ImageButton
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/settings"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:backgroundTint="@color/white"
           android:layout_marginRight="20dp"
           android:layout_marginTop="10dp"
           />
   </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/quickiesCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/mainCalculatorCard"
        app:layout_constraintBottom_toTopOf="@+id/graphCard"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"

            android:background="@drawable/flash"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Units converter"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/mainCalculatorCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
      app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/quickiesCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scantoSolveCard"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/calculator"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculator"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/graphCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
       app:layout_constraintTop_toBottomOf="@id/quickiesCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/scantoSolveCard"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"

            android:background="@drawable/graph_report"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graph"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/scantoSolveCard"
        android:layout_width="0dp"
        android:layout_height="150dp"
       app:layout_constraintTop_toBottomOf="@id/mainCalculatorCard"
        app:layout_constraintStart_toEndOf="@id/graphCard"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/card"
        android:orientation="vertical"
        >


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/qr_code_scan"
            android:backgroundTint="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan to solve"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>